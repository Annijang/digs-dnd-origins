{
    "name": "Breath Weapon",
    "description": "You can breath out a line of lightning before you, stunning your enemies.",
    "type": "origins:multiple",

    "sound":{
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:play_sound",
            "sound": "create:steam"
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        }
    },
    "fuel": {
        "type": "origins:resource",
        "min": 0,
        "max": 15,
        "hud_render": {
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 2,
            "should_render": true
        }
    },
    "regen": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_fuel",
            "change": 1
        },
        "interval": 40,
        "condition": {
            "type": "origins:biome",
            "condition": {
                "type": "origins:high_humidity",
                "inverted": true
            }
        }
    },
    "sparks": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:raycast",
            "distance": 10,
            "block": true,
            "entity": true,
            "shape_type": "visual",
            "fluid_handling": "any",
            "command_along_ray": "particle minecraft:electric_spark ~ ~ ~ .05 .05 .05 1 5",
            "bientity_action": {
            "type": "origins:target_action",
            "action": {
                "type": "origins:apply_effect",
                "effect": {
                    "effect": "minecraft:slowness",
                    "duration": 60,
                    "amplifier": 4,
                    "show_particles": false
                }
            }
        },
            "before_action": {
                "type": "origins:change_resource",
                "resource": "*:*_fuel",
                "change": -1
            }
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_fuel",
            "comparison": ">",
            "compare_to": 0
        }
    }
}